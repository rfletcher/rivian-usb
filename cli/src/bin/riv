#!/usr/bin/env bash

set -e

function resolve_link() {
  $(type -p greadlink readlink | head -1) "$1"
}

function abs_dirname() {
  local ORIG_PWD="$(pwd)"
  local MY_PATH="$1"

  while [ -n "$MY_PATH" ]; do
    cd "${MY_PATH%/*}"
    local NAME="${MY_PATH##*/}"
    MY_PATH="$(resolve_link "$NAME" || true)"
  done

  pwd
  cd "$ORIG_PWD"
}

LIBEXEC_PATH="$(abs_dirname "$(abs_dirname "$0")/../libexec/_")"
COMMAND="$1"

export _RIV_COMMAND="$COMMAND"
export _RIV_INDENT="${_RIV_INDENT:-0}"
export _RIV_ROOT="$(abs_dirname "$LIBEXEC_PATH")"
export _RIV_SHARE="${_RIV_ROOT}/share"

export PATH="${_RIV_ROOT}/bin:${LIBEXEC_PATH}:$PATH"

case "$COMMAND" in
"" | "-h" | "--help" )
  exec riv-help
  ;;
"-v" | "--version" )
  exec riv-version
  ;;
* )
  COMMAND_PATH="$(command -v "riv-$COMMAND" || true)"
  if [ ! -x "$COMMAND_PATH" ]; then
    echo "riv: no such command \`$COMMAND'" >&2
    exit 1
  fi

  shift
  exec "$COMMAND_PATH" "$@"
  ;;
esac
